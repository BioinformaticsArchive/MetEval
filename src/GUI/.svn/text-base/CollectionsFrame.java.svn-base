    private void addModelToRepoButtonMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_addModelToRepoButtonMouseClicked
        JFileChooser chooser = new JFileChooser();
       chooser.setMultiSelectionEnabled(true);
        File[] selected ;
        if(chooser.showOpenDialog(this) == JFileChooser.APPROVE_OPTION){
            selected = chooser.getSelectedFiles();
            for(File file:selected)
                app.addNewModelsToRepo(file);
                this.updateRepoList();
        }
    }//GEN-LAST:event_addModelToRepoButtonMouseClicked

    private void saveButtonMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_saveButtonMouseClicked
        saveCollectionName();
        app.addCollection(edited);
        app.saveAll();
        this.setVisible(false);
    }//GEN-LAST:event_saveButtonMouseClicked
private void saveCollectionName(){
    String name = this.nameField.getText();
    edited.setName(name);
}
    private void toCollectionButtonMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_toCollectionButtonMouseClicked
        MetModel selected = (MetModel) this.repoList.getSelectedValue();
        if(selected != null){
            this.edited.addModel(selected);//TODO:check for redundancy
            this.updateCollectionList();
        }
    }//GEN-LAST:event_toCollectionButtonMouseClicked

